<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="limitless.materialcolor">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ApplicationLoader"
        android:allowBackup="true"
        android:icon="@drawable/icon_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/AppTheme.FullScreen"
            android:label="@string/gradient_color"
            android:name=".Activity.GradientColorActivity" />
        <activity
            android:theme="@style/AppTheme.FullScreen"
            android:name=".Activity.SingleColorActivity"
            android:label="@string/single_color" />
        <activity
            android:name=".Activity.FluentColorsActivity"
            android:label="@string/text_fluent" />
        <activity
            android:name=".Activity.MetroColorsActivity"
            android:label="@string/text_metro" />
        <activity
            android:name=".Activity.SocialActivity"
            android:label="@string/text_social" />
        <activity
            android:name=".Activity.FlatUiColorsActivity"
            android:label="@string/text_flat_ui_colors" />
        <activity
            android:name=".Activity.TopColorsActivity"
            android:label="@string/text_top_color" />
        <activity
            android:name=".Activity.ColorImageActivity"
            android:label="@string/text_from_image" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_id" />
    </application>

</manifest>