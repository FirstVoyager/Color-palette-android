<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ColorImageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/image_test"
                android:id="@+id/imageView_main_colorImage_activityColorImage"/>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_camera_activityColorImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:drawableStart="@drawable/ic_camera_alt_black_24dp"
                    android:text="@string/text_camera"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_gallery_activityColorImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:drawableStart="@drawable/ic_image_black_24dp"
                    android:text="@string/text_gallery"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_2_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Dark Vibrant"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_1_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:text="Dark Muted"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_3_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Dominant"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_4_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Muted"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_5_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Vibrant"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_6_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Light Muted"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAllCaps="false"
                    android:id="@+id/button_7_activityColorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_content_copy_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Light Vibrant"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>