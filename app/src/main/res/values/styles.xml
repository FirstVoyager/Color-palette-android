<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="BottomSheet.Transparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Transparent</item>
    </style>

    <style name="Transparent" parent="Widget.Design.BottomSheet.Modal" >
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
